pipeline {
    agent any

    // â­ TRIGGER: Aceita webhooks do GitHub ## Teste ##
    triggers {
        githubPush()
    }

    environment {
        // ConfiguraÃ§Ãµes do projeto
        PROJECT_DIR = '/opt/apps/aguide-api-quarkus'
        GIT_REPO = 'https://github.com/cleidson-machado/aguide-api-quarkus.git'
        GIT_BRANCH = 'develop-data-objects'  // Ajuste conforme a branch
        MAVEN_OPTS = '-Dmaven.repo.local=/var/jenkins_home/.m2/repository'
    }

    stages {
        stage('Pipeline Info') {
            steps {
                script {
                    // Captura quem iniciou o build de forma nativa
                    def causes = currentBuild.getBuildCauses('hudson.model.Cause$UserIdCause')
                    def userName = causes ? causes[0].userName : 'Trigger AutomÃ¡tico'

                    echo '================================================'
                    echo 'ğŸ“Š INFORMAÃ‡Ã•ES DO JENKINS PIPELINE'
                    echo '================================================'
                    echo "ğŸ†” Build ID: ${BUILD_ID}"
                    echo "ğŸ”¢ Build Number: ${BUILD_NUMBER}"
                    echo "ğŸ“ Job Name: ${JOB_NAME}"
                    echo "ğŸ”— Build URL: ${BUILD_URL}"
                    echo "ğŸ‘¤ Iniciado por: ${userName}"
                    echo "ğŸŒ¿ Branch Git: ${env.GIT_BRANCH}"
                    echo "ğŸ“‚ Workspace: ${WORKSPACE}"
                    echo "ğŸ  Jenkins Home: ${JENKINS_HOME}"
                    echo "ğŸ–¥ï¸  Node Name: ${NODE_NAME}"
                    echo "â° Timestamp: ${new Date()}"
                    echo '================================================'
                }
            }
        }

        stage('Validar Branch') {
            steps {
                script {
                    echo 'ğŸ” Validando branch para ambiente de TESTE...'

                    // Captura a branch atual (pode vir do webhook ou da env)
                    def currentBranch = env.GIT_BRANCH ?: env.BRANCH_NAME ?: 'develop-data-objects'

                    echo "ğŸ“Œ Branch detectada: ${currentBranch}"

                    // â­ SÃ“ EXECUTA EM BRANCHES DEVELOP-*
                    if (!currentBranch.startsWith('develop-')) {
                        echo "âš ï¸  Branch '${currentBranch}' NÃƒO Ã© uma branch de desenvolvimento"
                        echo "âŒ Este job Ã© EXCLUSIVO para branches 'develop-*'"
                        echo "ğŸš« Build cancelado - use o job 'aguide-api-production' para branch main"
                        currentBuild.result = 'NOT_BUILT'
                        error("Branch ${currentBranch} nÃ£o permitida neste job de TESTE")
                    }

                    echo "âœ… Branch '${currentBranch}' VALIDADA - Prosseguindo com testes..."
                }
            }
        }

        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Atualizando cÃ³digo do repositÃ³rio...'
                sh '''
                    cd /opt/apps/aguide-api-quarkus
                    git fetch origin
                    git reset --hard origin/${GIT_BRANCH}
                    git clean -fd
                '''

                // Captura informaÃ§Ãµes do commit
                script {
                    env.GIT_COMMIT_SHORT = sh(
                        script: "cd /opt/apps/aguide-api-quarkus && git rev-parse --short HEAD",
                        returnStdout: true
                    ).trim()
                    env.GIT_COMMIT_MSG = sh(
                        script: "cd /opt/apps/aguide-api-quarkus && git log -1 --pretty=%B",
                        returnStdout: true
                    ).trim()
                    env.GIT_AUTHOR = sh(
                        script: "cd /opt/apps/aguide-api-quarkus && git log -1 --pretty=%an",
                        returnStdout: true
                    ).trim()
                }

                echo "ğŸ“Œ Commit: ${env.GIT_COMMIT_SHORT}"
                echo "ğŸ’¬ Mensagem: ${env.GIT_COMMIT_MSG}"
                echo "ğŸ‘¨â€ğŸ’» Autor: ${env.GIT_AUTHOR}"
            }
        }

        stage('Build Maven') {
            steps {
                echo '================================================'
                echo 'ğŸ”¨ COMPILAÃ‡ÃƒO RÃPIDA (sem testes)'
                echo '================================================'
                echo 'ğŸ“‹ Objetivo: Validar que o cÃ³digo COMPILA'
                echo 'â© Testes serÃ£o executados no prÃ³ximo stage'
                echo 'âš¡ Feedback rÃ¡pido: ~30 segundos'
                echo '================================================'
                sh '''
                    cd /opt/apps/aguide-api-quarkus
                    # -DskipTests: Compila mas NÃƒO executa testes
                    # Por quÃª? Separar compilaÃ§Ã£o de testes dÃ¡ feedback mais rÃ¡pido
                    # Os testes SERÃƒO executados no stage "SonarQube Analysis"
                    ./mvnw clean package -DskipTests
                '''
                echo 'âœ… CompilaÃ§Ã£o concluÃ­da com sucesso!'
            }
        }

        stage('Validar ConfiguraÃ§Ãµes de Teste') {
            steps {
                echo 'ğŸ” Validando configuraÃ§Ãµes de seguranÃ§a para testes...'
                script {
                    // Verifica se application.properties de teste existe
                    def testPropsExists = fileExists('/opt/apps/aguide-api-quarkus/src/test/resources/application.properties')
                    if (!testPropsExists) {
                        error('âŒ Arquivo src/test/resources/application.properties NÃƒO encontrado!')
                    }
                    echo 'âœ… Arquivo de configuraÃ§Ã£o de testes encontrado'

                    // Verifica se AuthenticationFilter estÃ¡ desabilitado em testes
                    def authFilterDisabled = sh(
                        script: "grep -q 'quarkus.arc.exclude-types=br.com.aguideptbr.features.auth.AuthenticationFilter' /opt/apps/aguide-api-quarkus/src/test/resources/application.properties",
                        returnStatus: true
                    )
                    if (authFilterDisabled != 0) {
                        echo 'âš ï¸  AVISO: AuthenticationFilter pode NÃƒO estar desabilitado em testes!'
                    } else {
                        echo 'âœ… AuthenticationFilter desabilitado para testes'
                    }

                    // Verifica se estÃ¡ usando banco de teste (quarkus_test)
                    def usingTestDb = sh(
                        script: "grep -q 'quarkus_test' /opt/apps/aguide-api-quarkus/src/test/resources/application.properties",
                        returnStatus: true
                    )
                    if (usingTestDb != 0) {
                        error('âŒ Database de teste (quarkus_test) NÃƒO configurado!')
                    }
                    echo 'âœ… Database de teste (quarkus_test) configurado corretamente'

                    // Verifica se Flyway estÃ¡ configurado para limpar banco em testes
                    def flywayClean = sh(
                        script: "grep -q 'quarkus.flyway.clean-at-start=true' /opt/apps/aguide-api-quarkus/src/test/resources/application.properties",
                        returnStatus: true
                    )
                    if (flywayClean != 0) {
                        echo 'âš ï¸  AVISO: Flyway pode nÃ£o estar configurado para limpar banco em testes'
                    } else {
                        echo 'âœ… Flyway configurado para limpar banco antes dos testes'
                    }

                    // Verifica se JWT estÃ¡ desabilitado em testes
                    def jwtDisabled = sh(
                        script: "grep -q 'quarkus.smallrye-jwt.enabled=false' /opt/apps/aguide-api-quarkus/src/test/resources/application.properties",
                        returnStatus: true
                    )
                    if (jwtDisabled != 0) {
                        echo 'âš ï¸  AVISO: JWT pode nÃ£o estar desabilitado em testes (pode causar erro ao carregar chaves)'
                    } else {
                        echo 'âœ… JWT desabilitado para testes (evita erro de chave pÃºblica)'
                    }

                    echo '================================================'
                    echo 'âœ… CONFIGURAÃ‡Ã•ES DE TESTE VALIDADAS:'
                    echo '   ğŸ“ application.properties: OK'
                    echo '   ğŸ”“ AuthenticationFilter: DESABILITADO'
                    echo '   ğŸ—„ï¸  Database: quarkus_test'
                    echo '   ğŸ§¹ Flyway clean-at-start: true'
                    echo '================================================'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo '================================================'
                echo 'ğŸ” Executando TESTES e anÃ¡lise SonarQube...'
                echo '================================================'
                echo 'ğŸ—„ï¸  Database: quarkus_test (PostgreSQL)'
                echo 'ğŸ”“ AutenticaÃ§Ã£o: DESABILITADA para testes'
                echo 'ğŸ§¹ Flyway: Limpa e recria schema a cada execuÃ§Ã£o'
                echo 'ğŸ“Š SonarQube: AnÃ¡lise de qualidade de cÃ³digo'
                echo '================================================'
                script {
                    // Configura o Maven tool
                    def mvn = tool 'Default Maven'

                    // âœ… CONFIGURAÃ‡ÃƒO CRÃTICA: No Jenkins (Docker), usar hostname Docker
                    // O application.properties tem fallback para localhost (testes locais)
                    // Mas Jenkins PRECISA usar quarkus_postgres (hostname do container)
                    withEnv([
                        'QUARKUS_DATASOURCE_JDBC_URL=jdbc:postgresql://quarkus_postgres:5432/quarkus_test',
                        'QUARKUS_DATASOURCE_USERNAME=quarkus',
                        'QUARKUS_DATASOURCE_PASSWORD=quarkus123'
                    ]) {
                        withSonarQubeEnv() {
                            sh """
                                cd /opt/apps/aguide-api-quarkus
                                echo 'â–¶ï¸  Iniciando execuÃ§Ã£o de testes...'
                                echo 'ğŸ”— Database URL: \${QUARKUS_DATASOURCE_JDBC_URL}'
                                ${mvn}/bin/mvn verify sonar:sonar \
                                    -Dsonar.projectKey=aguide-api-quarkus \
                                    -Dsonar.projectName='Aguide API Quarkus' \
                                    -Dsonar.coverage.jacoco.xmlReportPaths=target/site/jacoco/jacoco.xml
                            """
                        }
                    }
                }
                echo '================================================'
                echo 'âœ… Testes e anÃ¡lise SonarQube concluÃ­dos!'
                echo '================================================'
            }
        }

        stage('Verificar Testes Pulados (JWT)') {
            steps {
                echo '================================================'
                echo 'ğŸ§ª Verificando testes pulados relacionados a JWT...'
                echo '================================================'
                script {
                    def skippedJwt = sh(
                        script: '''
                            if ls target/surefire-reports/*.txt >/dev/null 2>&1; then
                              grep -R "JWTServiceTest" -l target/surefire-reports/*.txt 2>/dev/null \
                                | xargs -r grep "Skipped:" \
                                | awk -F 'Skipped: ' '{gsub(/[^0-9].*/, "", $2); sum+=$2} END{print sum+0}'
                            else
                              echo 0
                            fi
                        '''.trim(),
                        returnStdout: true
                    ).trim()

                    if (skippedJwt.isInteger() && skippedJwt.toInteger() > 0) {
                        echo "âš ï¸  JWTServiceTest teve ${skippedJwt} teste(s) pulado(s)."
                        echo 'â„¹ï¸  Isso Ã© esperado quando quarkus.smallrye-jwt.enabled=false no profile de teste.'
                    } else {
                        echo 'âœ… Nenhum teste de JWT pulado.'
                    }
                }
                echo '================================================'
            }
        }

        stage('Resumo de Testes Pulados') {
            steps {
                echo '================================================'
                echo 'ğŸ“Š Resumo geral de testes pulados (Surefire)...'
                echo '================================================'
                script {
                    def skippedTotal = sh(
                        script: '''
                            if ls target/surefire-reports/*.txt >/dev/null 2>&1; then
                              grep -R "Tests run:" -l target/surefire-reports/*.txt 2>/dev/null \
                                | xargs -r grep "Tests run:" \
                                | awk -F 'Skipped: ' '{gsub(/[^0-9].*/, "", $2); sum+=$2} END{print sum+0}'
                            else
                              echo 0
                            fi
                        '''.trim(),
                        returnStdout: true
                    ).trim()

                    if (skippedTotal.isInteger() && skippedTotal.toInteger() > 0) {
                        echo "âš ï¸  Total de testes pulados: ${skippedTotal}"
                        echo 'â„¹ï¸  Verifique se os pulos sÃ£o esperados (ex.: JWT desabilitado em testes).'
                    } else {
                        echo 'âœ… Nenhum teste foi pulado.'
                    }
                }
                echo '================================================'
            }
        }

        stage('Verificar Artefatos') {
            steps {
                echo 'ğŸ“‹ Verificando artefatos gerados...'
                sh '''
                    cd /opt/apps/aguide-api-quarkus
                    ls -lh target/
                    ls -lh target/quarkus-app/ || echo "Pasta quarkus-app nÃ£o encontrada"
                '''
            }
        }
    }

    post {
        success {
            echo '================================================'
            echo 'âœ… PIPELINE DE TESTES EXECUTADO COM SUCESSO!'
            echo '================================================'
            echo "ğŸ‰ Build e testes concluÃ­dos com sucesso!"
            echo "âœ… CÃ³digo validado para branch de desenvolvimento"
            echo "ğŸ”¢ Build #${BUILD_NUMBER} concluÃ­do"
            echo "â±ï¸  DuraÃ§Ã£o: ${currentBuild.durationString}"
            echo "ğŸ”— Console: ${BUILD_URL}console"
            echo "âš ï¸  DEPLOY NÃƒO REALIZADO (use Jenkinsfile.production para deploy)"
            echo '================================================'
        }
        failure {
            echo '================================================'
            echo 'âŒ PIPELINE FALHOU!'
            echo '================================================'
            echo "ğŸ”¢ Build #${BUILD_NUMBER} com erro"
            echo "ğŸ“‹ Verificar logs: ${BUILD_URL}console"
            echo "ğŸ” Status: ${currentBuild.result}"
            echo '================================================'
        }
        always {
            script {
                def duration = currentBuild.durationString.replace(' and counting', '')
                echo '================================================'
                echo 'ğŸ“Š RESUMO DA EXECUÃ‡ÃƒO'
                echo '================================================'
                echo "ğŸ†” Build ID: ${BUILD_ID}"
                echo "ğŸ”¢ Build Number: ${BUILD_NUMBER}"
                echo "ğŸ“ Job: ${JOB_NAME}"
                echo "ğŸ¯ Status: ${currentBuild.currentResult}"
                echo "â±ï¸  DuraÃ§Ã£o: ${duration}"
                echo "ğŸŒ¿ Branch: ${env.GIT_BRANCH}"
                echo "ğŸ“Œ Commit: ${env.GIT_COMMIT_SHORT ?: 'N/A'}"
                echo "ğŸ‘¨â€ğŸ’» Autor: ${env.GIT_AUTHOR ?: 'N/A'}"
                echo "â° Finalizado: ${new Date()}"
                echo '================================================'
            }
        }
    }
}
