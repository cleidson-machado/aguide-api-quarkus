#!/bin/bash
# Script para executar testes com output limpo (similar ao Jest/NestJS)
# Uso: ./test.sh

# Cores
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
GRAY='\033[0;90m'
NC='\033[0m' # No Color
BOLD='\033[1m'

# Limpar tela
clear

echo -e "${BOLD}ðŸ§ª Executando testes...${NC}\n"

# Executar testes silenciosamente e contar resultados
./mvnw test -B -q 2>&1 | while IFS= read -r line; do
    # Mostrar classes sendo testadas
    if [[ "$line" =~ "Running br.com.aguideptbr" ]]; then
        TEST_CLASS=$(echo "$line" | sed 's/.*Running //' | sed 's/.*\.//' | sed 's/Test$//')
        echo -e "${GRAY}  â—‹${NC} ${TEST_CLASS}"
    fi

    # Capturar resultados
    if [[ "$line" =~ "Tests run:" ]]; then
        if [[ "$line" =~ "Failures: 0, Errors: 0" ]]; then
            CLASS=$(echo "$line" | sed -n 's/.*in \(.*\)/\1/p' | sed 's/.*\.//' | sed 's/Test$//')
            TOTAL=$(echo "$line" | sed -n 's/.*Tests run: \([0-9]*\).*/\1/p')
            SKIPPED=$(echo "$line" | sed -n 's/.*Skipped: \([0-9]*\).*/\1/p')

            if [ "$SKIPPED" != "0" ] && [ -n "$SKIPPED" ]; then
                echo -e "${GREEN}  âœ“${NC} ${CLASS} ${GRAY}(${TOTAL} tests, ${SKIPPED} skipped)${NC}"
            else
                echo -e "${GREEN}  âœ“${NC} ${CLASS} ${GRAY}(${TOTAL} tests)${NC}"
            fi
        else
            CLASS=$(echo "$line" | sed -n 's/.*in \(.*\)/\1/p' | sed 's/.*\.//' | sed 's/Test$//')
            FAILURES=$(echo "$line" | sed -n 's/.*Failures: \([0-9]*\).*/\1/p')
            ERRORS=$(echo "$line" | sed -n 's/.*Errors: \([0-9]*\).*/\1/p')
            echo -e "${RED}  âœ—${NC} ${CLASS} ${RED}(${FAILURES} failures, ${ERRORS} errors)${NC}"
        fi
    fi
done

# Executar novamente para pegar resultado final (rÃ¡pido, usa cache)
FINAL_OUTPUT=$(./mvnw test -B -q 2>&1)

echo ""

# Verificar resultado
if echo "$FINAL_OUTPUT" | grep -q "BUILD SUCCESS"; then
    TOTAL_TESTS=$(echo "$FINAL_OUTPUT" | grep "Tests run:" | tail -1 | sed -n 's/.*Tests run: \([0-9]*\).*/\1/p')
    TOTAL_SKIPPED=$(echo "$FINAL_OUTPUT" | grep "Tests run:" | tail -1 | sed -n 's/.*Skipped: \([0-9]*\).*/\1/p')
    TOTAL_SUITES=$(echo "$FINAL_OUTPUT" | grep -c "Tests run:")
    TIME_RAW=$(echo "$FINAL_OUTPUT" | grep "Total time:" | sed -n 's/.*Total time: *\(.*\)/\1/p')

    echo -e "${BOLD}${GREEN}âœ“ Test Suites:${NC} ${BOLD}${TOTAL_SUITES} passed${NC}, ${TOTAL_SUITES} total"
    echo -e "${BOLD}${GREEN}âœ“ Tests:${NC}       ${BOLD}${TOTAL_TESTS} passed${NC}${GRAY} (${TOTAL_SKIPPED} skipped)${NC}, ${TOTAL_TESTS} total"
    echo -e "${BOLD}Time:${NC}        ${TIME_RAW}"
    echo ""
    echo -e "${BOLD}${GREEN}âœ¨ Todos os testes passaram!${NC}"
    exit 0
else
    echo -e "${BOLD}${RED}âœ— Alguns testes falharam${NC}\n"
    echo "$FINAL_OUTPUT" | grep -A 20 "FAILURE"
